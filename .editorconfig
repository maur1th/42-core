# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.c]
indent_style = tab
indent_size = 4

[*]
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
